<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.luis.breastawarenessapp.PreventionActivity"
    android:background="@drawable/helpbg">


    <ScrollView
        android:layout_width="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"

        android:id="@+id/prevention"
        android:layout_marginTop="70dp"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:showDividers="middle"
            android:weightSum="1">





    <TextView android:text="Breast Cancer Awareness App v1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:id="@+id/textView10" />


            <TextView android:text="Background: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

        android:id="@+id/textView9" />

            <TextView
                android:text="This app is made for everyone to give awareness and information about breast cancer. This app may also serve as a handbook for people who might experience or who are experiencing breast cancer."
                android:layout_width="fill_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/textView2"
                 />

            <TextView
        android:text="Instructions:"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
        android:id="@+id/textView11" />

    <TextView
        android:text="You can open the tab choice by simply tapping from the given options. "
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"


        android:id="@+id/textView12" />

    <TextView
        android:text="Features:"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="10dp"
         />


    <TextView
        android:text="This app gives a brief summary and discussion about breast cancer. It shows the different kinds of symptoms that may occur. It Gives some information on how to diagnose the cancer. Lastly, it teaches people on how to prevent having breast cancer. "
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/textView13"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:text="Support Information"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        />

            <TextView
                android:text="Breast Cancer Awareness App is developed by JML"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                />
            <TextView
                android:text="Janssen Co - Mac Fallar - Luis Lerit"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:id="@+id/textView7"
                />

            <TextView
                android:text="Sources: 1. www.nationalbreastcancer.org  2. www.fredhutch.org   3. www.webmd.com "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>